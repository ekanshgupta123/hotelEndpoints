{
  "compilerOptions": {
    "target": "es6", // Updated to support ES6 features natively
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false, // Changed to allow JS file emission
    "esModuleInterop": true,
    "module": "ESNext", // Changed from CommonJS to ESNext for ES module support
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./dist", // Specifies the output directory for compiled files
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/*.d.ts"],
  "exclude": ["node_modules"]
}
